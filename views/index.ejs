<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HOME</title>
    <link rel="stylesheet" href="index.css">
</head>

<body>
    <video src="video1.mp4" autoplay loop muted></video>
    <div class="home">
        <header>
            <h2>CinePeek</h2>
            <nav class="desktopNav"><a href="/">Home</a><a href="/random">Random Pick</a><a
                    href="/watchlist">Watchlist</a>
            </nav>
            <nav class="mobileNav"><a href="/random">Random Pick</a></nav>

        </header>
        <main>
            <div class="container">
                <h1>Welcome to CinePeekðŸŽ¬</h1>
                <h2>Discover movies you've never seen</h2>

                <form action="/submit" method="post">
                    <!-- <div> -->
                    <select name="genre" id="genre">
                        <option value="" disabled selected>Genre</option>
                        <option value="Drama">Drama</option>
                        <option value="Documentary">Documentary</option>
                        <option value="Crime">Crime</option>
                        <option value="Thriller">Thriller</option>
                        <option value="History">History</option>
                        <option value="Western">Western</option>
                        <option value="Comedy">Comedy</option>
                        <option value="Action">Action</option>
                        <option value="Music">Music</option>
                        <option value="War">War</option>
                        <option value="Fantasy">Fantasy</option>
                        <option value="Horror">Horror</option>

                    </select>
                    <select name="media" id="media">
                        <option value="" disabled selected>Media Type</option>
                        <option value="movies">Movies</option>
                        <option value="tvShows">Tv Shows</option>
                    </select>
                    <select name="language" id="language">
                        <option value="" disabled selected>Language</option>
                        <option value="en">English</option>
                        <option value="fr">French</option>
                        <option value="ko">Korian</option>
                        <option value="hu">Hungarian</option>
                        <option value="ja">Japanese</option>

                    </select>
                    <!-- </div> -->
                    <button type="submit">Discover</button>
                </form>
            </div>
        </main>
        <footer class="tmdb-footer"> Data provided by <a href="https://www.themoviedb.org/" target="_blank">TMDb</a>.</footer>
    </div>

    <script>
        const video = document.querySelector('video');
        const video1 = "video1.mp4";
        const video2 = "video2.mp4";
        const video3 = "video3.mp4";
        // const video4="video4.mp4";
        // const video5="video5.mp4";

        const videos = [video1, video2, video3];
        let index = 0;
        setInterval(() => {
            // let random=Math.floor(Math.random()*videos.length);
            index = index % videos.length;
            video.src = videos[index];
            index++;
        }, 8000);


    </script>
</body>

</html>